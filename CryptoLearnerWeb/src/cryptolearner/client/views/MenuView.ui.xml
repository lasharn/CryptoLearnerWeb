<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}

	.divider {
		height: 100px;
		width: 100%;
	}

	button {
		width: 90% !important;
	}
	</ui:style>
	<g:HTMLPanel>
	    <b:Carousel b:id="menu" ui:field="carouselMenu">
	        <b:CarouselInner>
	            <b:CarouselSlide ui:field="firstSlide" active="true">
	                <b:PageHeader>Caesar Cipher</b:PageHeader>
	                <b:Container addStyleNames="{style.divider}"></b:Container>
	                <b:Container fluid="true">
	                    <b:Row>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="caesarChallengeOne" icon="PENCIL_SQUARE_O">Encrypt</b:Button></b:Column>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="caesarChallengeTwo" icon="LOCK"></b:Button></b:Column>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="caesarChallengeThree" icon="LOCK"></b:Button></b:Column>
	                    </b:Row>
	                </b:Container>
	            </b:CarouselSlide>
	            <b:CarouselSlide>
	                <b:PageHeader>Substitution Cipher</b:PageHeader>
	                <b:Container addStyleNames="{style.divider}"></b:Container>
	                <b:Container fluid="true">
	                    <b:Row>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="subChallengeOne" icon="PENCIL_SQUARE_O">Encrypt</b:Button></b:Column>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="subChallengeTwo" icon="LOCK"></b:Button></b:Column>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="subChallengeThree" icon="LOCK"></b:Button></b:Column>
	                    </b:Row>
	                </b:Container>
	            </b:CarouselSlide>
	            <b:CarouselSlide ui:field="lastSlide">
	                <b:PageHeader>Vigenere Cipher</b:PageHeader>
	                <b:Container addStyleNames="{style.divider}"></b:Container>
	                <b:Container fluid="true">
	                    <b:Row>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="vigChallengeOne" icon="PENCIL_SQUARE_O">Encrypt</b:Button></b:Column>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="vigChallengeTwo" icon="LOCK"></b:Button></b:Column>
	                        <b:Column size="XS_12,MD_4,LG_4"><b:Button ui:field="vigChallengeThree" icon="LOCK"></b:Button></b:Column>
	                    </b:Row>
	                </b:Container>
	            </b:CarouselSlide>
	        </b:CarouselInner>
	        <b:CarouselControl ui:field="leftControl" dataTarget="#menu" prev="false" iconType="CHEVRON_LEFT"/>
			<b:CarouselControl ui:field="rightControl" dataTarget="#menu" next="true" iconType="CHEVRON_RIGHT"/>
		</b:Carousel>
	</g:HTMLPanel>
</ui:UiBinder> 